STYLE DS_SETFONT | DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU /*| WS_VISIBLE*/
CAPTION "Save to PNG file"
FONT 8, "MS Shell Dlg", 0, 0, 0x1
BEGIN
    CONTROL "Enter file name:", IDC_STATIC, "Static", SS_LEFT | WS_CHILD | WS_VISIBLE, 10, 10, 180, 16
    CONTROL "", ID_MENU_FILE_SAVE_DIALOG_CONTROL_EDIT_CONTROL , "Edit", ES_LEFT | WS_CHILD | WS_VISIBLE | WS_BORDER | WS_TABSTOP, 10, 30, 180, 20
    PUSHBUTTON "OK", IDOK, 70, 60, 60, 24, WS_TABSTOP
    PUSHBUTTON "Cancel", IDCANCEL, 140, 60, 60, 24, WS_TABSTOP
END

