ID_MENU_BACKGROUND_COLOR MENU
BEGIN
    POPUP "&Background"
    BEGIN
        MENUITEM "Black", ID_MENU_BACKGROUND_COLOR_BLACK
        MENUITEM "Green", ID_MENU_BACKGROUND_COLOR_GREEN
        MENUITEM "Red", ID_MENU_BACKGROUND_COLOR_RED
        MENUITEM "White", ID_MENU_BACKGROUND_COLOR_WHITE
    END
END

ID_MENU_FOREGROUND_COLOR MENU
BEGIN
    POPUP "&ForeGround"
    BEGIN
        MENUITEM "Black", ID_MENU_FOREGROUND_COLOR_BLACK
        MENUITEM "Blue", ID_MENU_FOREGROUND_COLOR_BLUE
        MENUITEM "Green", ID_MENU_FOREGROUND_COLOR_GREEN
        MENUITEM "Red", ID_MENU_FOREGROUND_COLOR_RED
        MENUITEM "White", ID_MENU_FOREGROUND_COLOR_WHITE
    END
END

ID_MENU_BAR MENU
BEGIN
    POPUP "&File"       
    BEGIN
        MENUITEM "Save", ID_MENU_FILE_SAVE
        MENUITEM SEPARATOR
        MENUITEM "Exit", ID_MENU_FILE_EXIT
    END
    POPUP "&Backround"
    BEGIN
        MENUITEM "Black", ID_MENU_BACKGROUND_COLOR_BLACK
        MENUITEM "Green", ID_MENU_BACKGROUND_COLOR_GREEN
        MENUITEM "Red", ID_MENU_BACKGROUND_COLOR_RED
        MENUITEM "White", ID_MENU_BACKGROUND_COLOR_WHITE
    END
    POPUP "&Foreground"
    BEGIN
        MENUITEM "Black", ID_MENU_FOREGROUND_COLOR_BLACK
        MENUITEM "Blue", ID_MENU_FOREGROUND_COLOR_BLUE
        MENUITEM "Green", ID_MENU_FOREGROUND_COLOR_GREEN
        MENUITEM "Red", ID_MENU_FOREGROUND_COLOR_RED
        MENUITEM "White", ID_MENU_FOREGROUND_COLOR_WHITE 
    END
END

